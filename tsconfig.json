{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "declaration": true,
    "outDir": "./dist",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2021"]
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*", "src/**/*.json", "./package.json", "manifests/**/*.json", "index.ts"],
  "exclude": ["node_modules", "tools", "test"]
}
